<h1> New user </h1>

<%= form_for @changeset, Routes.user_path(@conn, :create), fn f -> %>
  <div>
    Name: <%= text_input f, :name, placeholder: "your name" %>
    <%= error_tag f, :name %>
  </div>
  <div>
    Username: <%= text_input f, :username, placeholder: "a username you want" %>
    <%= error_tag f, :username %>
  </div>
<div>
    Password: <%= text_input f, :password, placeholder: "your password" %>
    <%= error_tag f, :password %>
  </div>
  <%= submit "create user" %>
<% end %>
